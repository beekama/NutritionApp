<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="10dp" />
            <padding
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>
            <gradient
                android:centerColor="@color/greyDark"
                android:startColor="@color/greyDark"
                android:endColor="@color/greyDark"
                android:centerY="0.5"
                android:angle="270"/>
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="10dp"/>
                <gradient
                    android:startColor="@color/green_nice"
                    android:endColor="@color/green_nice"
                    android:angle="90"/>
            </shape>
        </clip>
    </item>




</layer-list>