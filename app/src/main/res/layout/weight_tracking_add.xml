<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_shape_grey"
    android:id="@+id/weight_tracking_add">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidlinev1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidlinev2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidlineh1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidlineh2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>


    <TextView
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:id="@+id/addingHeader"
        android:text="Adding new weight:"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guidlineh1"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/addingValueDate"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/addingValueWeight"
        app:layout_constraintEnd_toStartOf="@id/guidlinev1"
         />

    <EditText
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/addingValueWeight"
        app:layout_constraintStart_toStartOf="@id/guidlinev1"
        app:layout_constraintEnd_toEndOf="@id/guidlinev2"
        app:layout_constraintTop_toTopOf="@id/guidlineh1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/addingIcon"
        android:src="@drawable/ic_done_black_24dp"
        app:layout_constraintStart_toStartOf="@id/guidlinev2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidlineh1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/addingValueDateHeader"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/date"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidlineh1"
        app:layout_constraintBottom_toBottomOf="@id/guidlineh2"
        app:layout_constraintEnd_toStartOf="@id/guidlinev1"
        />

    <TextView
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/weight"
        android:id="@+id/addingValueWeightHeader"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/guidlinev1"
        app:layout_constraintEnd_toEndOf="@id/guidlinev2"
        app:layout_constraintTop_toTopOf="@id/guidlineh1"
        app:layout_constraintBottom_toBottomOf="@id/guidlineh2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/addingIconHeader"
        android:text="@string/submit"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guidlinev2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidlineh1"
        app:layout_constraintBottom_toBottomOf="@id/guidlineh2" />


</androidx.constraintlayout.widget.ConstraintLayout>