<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- DATE OF DAY-->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="32dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- ENERGY ON THIS DAY -->
    <TextView
        android:id="@+id/energyBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        />

    <!-- NUTRITION ON THIS DAY -->
    <TextView
        android:id="@+id/nutritionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/energyBar"
        />

    <!-- LIST OF FOODS ON THIS DAY -->
    <LinearLayout
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutritionBar">
        <com.example.nutritionapp.other.NestableList
            android:id="@+id/list_grouped_foods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/background_light"
            android:dividerHeight="1dp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>