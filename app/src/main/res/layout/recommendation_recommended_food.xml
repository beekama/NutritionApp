<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommendation_recommended_food">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:maxLines="4"
        android:id="@+id/recommendedFoodText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recommendedFoodAmount"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recommendedFoodAmount"
        android:paddingBottom="10dp"
        android:layout_marginEnd="2dp"
        android:paddingEnd="10dp"
        android:paddingStart="0dp"
        app:layout_constraintEnd_toStartOf="@id/unity"
        app:layout_constraintBottom_toBottomOf="@id/recommendedFoodText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unity"
        android:paddingBottom="10dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/recommendedFoodText"/>


</androidx.constraintlayout.widget.ConstraintLayout>