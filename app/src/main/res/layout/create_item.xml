<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/createItem_tvCreateItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Items"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <ImageButton
        android:id="@+id/createItem_back_button"
        android:layout_width="76dp"
        android:layout_height="45dp"
        android:background="#00000000"

        app:layout_constraintBottom_toBottomOf="@id/createItem_tvCreateItem"

        app:layout_constraintEnd_toStartOf="@+id/foods_myItemText"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"

        />

    <TextView
        android:id="@+id/tv_createItem_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="name:"
        android:textSize="18dp"
        android:paddingVertical="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edit_createItem_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/createItem_tvCreateItem"

        app:layout_constraintVertical_bias="0.25"></TextView>

    <TextView
        android:id="@+id/tv_createItem_servingSize"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"

        android:text="serving size:"
        android:textSize="18dp"

        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/dividerOne"/>
    <TextView
        android:id="@+id/tv_createItem_energy"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"

        android:text="energy:"
        android:textSize="18dp"

        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/dividerTwo"/>
    <TextView
        android:id="@+id/tv_createItem_fiber"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"

        android:text="fiber:"
        android:textSize="18dp"

        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/dividerThree"/>

    <EditText
        android:id="@+id/edit_createItem_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"

        android:hint="e.g Homemade Lasagna"
        android:inputType="textPersonName"
        android:background="@null"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_createItem_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_createItem_name"
        tools:layout_editor_absoluteY="194dp"/>

    <EditText
        android:id="@+id/edit_createItem_servingSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"

        android:hint="e.g 1 piece"
        android:inputType="textPersonName"
        android:background="@null"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_createItem_servingSize"
        app:layout_constraintStart_toEndOf="@+id/tv_createItem_servingSize"
        app:layout_constraintHorizontal_bias="0.5"
        />
    <EditText
        android:id="@+id/edit_createItem_energy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"

        android:hint="e.g 500 kcal"
        android:inputType="textPersonName"
        android:background="@null"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_createItem_energy"
        app:layout_constraintStart_toEndOf="@+id/tv_createItem_energy"
        app:layout_constraintHorizontal_bias="0.5"
        />
    <EditText
        android:id="@+id/edit_createItem_fiber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"

        android:hint="e.g 10 grams"
        android:inputType="textPersonName"
        android:background="@null"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_createItem_fiber"
        app:layout_constraintStart_toEndOf="@+id/tv_createItem_fiber"
        app:layout_constraintHorizontal_bias="0.5"
        tools:layout_editor_absoluteY="267dp"
        />


    <View
        android:id="@+id/dividerOne"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/tv_createItem_name"
        />
    <View
        android:id="@+id/dividerTwo"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/tv_createItem_servingSize"
        />
    <View
        android:id="@+id/dividerThree"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/tv_createItem_energy"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="tv_createItem_servingSize,tv_createItem_name,guideline"
        tools:layout_editor_absoluteX="411dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>