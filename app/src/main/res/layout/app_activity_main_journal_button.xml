<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/app_activity_main_button_journal"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/button_main_menu_big">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/recommendation_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Button_Title"/>

    <View
        android:id="@+id/spacerLine"
        android:layout_height="2dp"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommendation_button_title"
        />

    <!--
    <View
        android:id="@+id/spacerLine"
        android:layout_height="2dp"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_title"
        /> -->

    <ImageButton
        android:id="@+id/button_add"
        android:background="#00000000"
        android:src="@drawable/ic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        style="@style/Button_Bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spacerLine"
        android:contentDescription="@string/add_food_to_journal_button_description" />

    <ImageButton
        android:id="@+id/button_view_journal"
        android:background="#00000000"
        android:src="@drawable/ic_viewlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        style="@style/Button_Bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/button_add"
        android:contentDescription="@string/view_journal_button_description" />


</androidx.constraintlayout.widget.ConstraintLayout>